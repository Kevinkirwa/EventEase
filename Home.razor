@page "/"
@using EventEase.Models
@using EventEase.Components

<h1>Welcome to EventEase</h1>

<p>Manage your events and RSVPs below.</p>

<div style="display: flex; flex-wrap: wrap;">
    @foreach (var evt in events)
    {
        <EventCard EventData="@evt" />
    }
</div>

@code {
    private List<Event> events = new List<Event>
    {
        new Event { Title = "Tech Conference", Date = DateTime.Now.AddDays(10), Location = "Convention Center", Attendees = 120 },
        new Event { Title = "Music Festival", Date = DateTime.Now.AddDays(25), Location = "City Park", Attendees = 500 },
        new Event { Title = "Art Workshop", Date = DateTime.Now.AddDays(5), Location = "Community Hall", Attendees = 30 }
    };
}

